#!/usr/bin/env bash

export MEMCACHE_SERVERS='' MEMCACHIER_SERVERS=''

echo "-----> Collecting Static"
cd /app; python manage.py collectstatic --noinput --settings=envs.live_local
cd /app;python manage.py collectstatic --noinput --settings=envs.live

echo "-----> Compress"
cd /app;python manage.py compress --settings=envs.live

echo "-----> Sync to S3"
cd /app;python manage.py sync_static --gzip --expires --settings=envs.live

echo "-----> Post-compile done"